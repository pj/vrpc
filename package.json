    "@types/node": "^13.1.6",
    "@types/prettier": "^1.15.2",
    "@types/proper-lockfile": "^4.1.1",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.4",
    "@types/supertest": "^2.0.7",
    "@types/tmp": "^0.1.0",
    "@types/yargs": "^15.0.0",
    "apollo-boost": "^0.4.4",
    "apollo-server": "^2.14.2",
    "apollo-server-types": "^0.2.10",
    "classnames": "^2.2.6",
    "cors": "^2.8.5",
    "ejs": "^3.0.1",
    "enzyme": "^3.9.0",
    "express": "^4.17.1",
    "graphql": "^14.5.4",
    "graphql-import": "^0.7.1",
    "json-object-mapper": "^1.6.0",
    "lodash": "^4.17.13",
    "parcel": "^1.12.3",
    "prettier": "^1.15.3",
    "proper-lockfile": "^4.1.1",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "react-number-format": "^4.3.1",
    "reflect-metadata": "^0.1.13",
    "superagent": "^5.0.6",
    "tmp": "^0.1.0",
    "type-graphql": "^0.17.6",
    "typescript": "^3.2.1",
    "yargs": "^15.1.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.7.0",
    "@graphql-codegen/introspection": "1.11.2",
    "@graphql-codegen/typescript": "1.11.2",
    "@graphql-codegen/typescript-operations": "^1.7.0",
    "@types/jest": "^24.0.25",
    "chokidar-cli": "^2.1.0",
    "jest": "^24.9.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.3.0",
    "ts-node": "^8.2.0",
    "ts-node-dev": "^1.0.0-pre.42"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "chokidar \"lib/**/*.ejs\" \"lib/**/*.ts\" \"tests/**/*.ts\" \"tests/**/*.json\" -c \"yarn run test\" --ignore runtest --ignore tests/snapshots",
    "server:build": "tsc --project tsconfig.server.json && cp lib/schema.gql dist",
    "server:watch": "chokidar \"lib/**/*.ejs\" \"lib/**/*.ts\" \"tests/**/*.ts\" \"server/**/*.ts\" -c \"graphql-codegen --config codegen.yml && tsc --outDir dist --rootDir lib && cp lib/server/schema.graphql dist/server\" --ignore runtest --ignore tests/snapshots",
    "server:validate": "tsc --project tsconfig.server.json --noEmit",
    "server:validate:watch": "tsc --project tsconfig.server.json --noEmit --watch",
    "server:start": "ts-node-dev --project tsconfig.server.json lib/test_server.ts",
    "client:validate": "tsc --project tsconfig.json --noEmit",
    "client:validate:watch": "tsc --project tsconfig.json --watch --noEmit",
    "client:start": "parcel -d dist/client --public-url /static client/index.html",
    "client:build": "parcel build -d dist/client --public-url /static --no-minify client/index.html",
    "generate:schema": "ts-node lib/emit_schema.ts && graphql-codegen --config codegen.yml && cp lib/schema.gql dist"
  }
}
